<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BabyBuy" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/creamy_orange</item>
        <item name="colorPrimaryVariant">@color/creamy_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/polaroid_blue</item>
        <item name="colorSecondaryVariant">@color/mist_blue</item>
        <item name="colorOnSecondary">@color/cool_pink</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <item name="colorOnBackground">@color/white</item>
    </style>

    <style name="Theme.BabyBuy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>