<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory app:title="Account">
        <EditTextPreference
            app:key="signature"
            app:title="@string/User_name"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Theme">
        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Dark theme" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about_header">
        <EditTextPreference
            app:key="version"
            app:title="Version"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="1.0.0"
            app:selectable="false"/>
    </PreferenceCategory>

</PreferenceScreen>